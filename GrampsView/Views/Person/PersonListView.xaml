<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GrampsView.Views.PersonListPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ucon="clr-namespace:GrampsView.UserControls"
    Title="{Binding BaseTitle}"
    ControlTemplate="{StaticResource ListPageTemplate}"
    Style="{StaticResource GVBaseContentPage}">

    <!--  Content  -->
    <Grid>

        <ucon:FlexSingleCardType
            x:Name="flexLayout"
            BorderColor="{StaticResource CardBackGround}"
            FsctSource="{Binding PersonSource, Mode=OneWay}"
            FsctTemplate="{StaticResource PersonCardSmallDT}" />
    </Grid>
</ContentPage>