<?xml version="1.0" encoding="UTF-8" ?>
<Frame
    x:Class="GrampsView.UserControls.NoteCardFull"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:markdown="clr-namespace:Xam.Forms.Markdown;assembly=Xam.Forms.MarkdownView"
    x:Name="NoteCardFullRoot"
    BindingContextChanged="PersonCardSmallRoot_BindingContextChanged"
    Style="{DynamicResource NoteFullTextStyle}">
    <Frame.Content>

        <Grid
            x:Name="controlRoot"
            FlexLayout.AlignSelf="Start"
            FlexLayout.Basis="{OnIdiom Phone='50%',
                                       Tablet='33%',
                                       Desktop='33%'}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <markdown:MarkdownView
                x:Name="mdview"
                Grid.Row="0"
                FlexLayout.Basis="75"
                Markdown="{Binding DeRef.GText}" />
        </Grid>
    </Frame.Content>
</Frame>