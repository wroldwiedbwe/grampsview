<?xml version="1.0" encoding="UTF-8" ?>
<Frame
    x:Class="GrampsView.UserControls.EventCardLarge"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Navigation.Xaml;assembly=Prism.Forms"
    x:Name="PersonCardSmallRoot"
    BackgroundColor="{StaticResource CardBackGroundEvent}"
    Style="{StaticResource FrameLargeFixedCardStyle}">
    <Frame.Content>

        <Grid
            x:Name="controlRoot"
            FlexLayout.AlignSelf="Start"
            FlexLayout.Basis="{OnIdiom Phone='50%',
                                       Tablet='33%',
                                       Desktop='33%'}">

            <Grid.GestureRecognizers>
                <TapGestureRecognizer
                    Command="{prism:NavigateTo 'EventDetailPage'}">
                    <TapGestureRecognizer.CommandParameter>
                        <prism:NavigationParameter
                            Key="hlink"
                            Value="{Binding HLink}" />
                    </TapGestureRecognizer.CommandParameter>
                </TapGestureRecognizer>
            </Grid.GestureRecognizers>

            <BoxView
                BackgroundColor="Pink"
                HorizontalOptions="CenterAndExpand" />
        </Grid>
    </Frame.Content>

