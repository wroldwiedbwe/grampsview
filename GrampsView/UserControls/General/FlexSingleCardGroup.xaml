<Frame
    x:Class="GrampsView.UserControls.FlexSingleCardGroup"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="FlexSingleCardTypeRoot"
    BackgroundColor="{StaticResource FrameBackGround}"
    Style="{StaticResource FlexMultiCollection}">

    <ScrollView
        x:Name="scroller"
        Margin="1"
        Padding="1"
        VerticalScrollBarVisibility="Always">

        <Grid Margin="1" Padding="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label
                x:Name="flextitle"
                Grid.Row="0"
                Text="{Binding FSCGSource.Title, Mode=OneWay}"
                TextColor="White" />

            <FlexLayout
                x:Name="flexer"
                Grid.Row="1"
                BindableLayout.ItemTemplate="{Binding FASCGTemplate, Mode=OneWay}"
                BindableLayout.ItemsSource="{Binding DisplayList, Mode=OneWay}"
                Style="{StaticResource FlexLayoutCards}" />
        </Grid>
    </ScrollView>
</Frame>