<Frame
    x:Class="GrampsView.UserControls.FlexSingleCardType"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="FlexSingleCardTypeRoot"
    BackgroundColor="{StaticResource FrameBackGround}"
    Style="{StaticResource FlexSingleCollection}">

    <ScrollView
        x:Name="scroller"
        Margin="1"
        Padding="1"
        Scrolled="Scroller_Scrolled"
        VerticalScrollBarVisibility="Always">
        <Grid Margin="1" Padding="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label
                x:Name="flextitle"
                Grid.Row="0"
                Text="{Binding FsctSource.Title, Mode=OneWay}"
                TextColor="{DynamicResource TextLightColor}" />

            <FlexLayout
                x:Name="flexer"
                Grid.Row="1"
                BindableLayout.ItemTemplate="{Binding FsctTemplate, Mode=OneWay}"
                BindableLayout.ItemsSource="{Binding DisplayList, Mode=OneWay}"
                IsEnabled="{Binding FlexSingleCardVisible, Mode=OneWay}"
                Style="{DynamicResource FlexLayoutCards}" />
        </Grid>
    </ScrollView>
</Frame>