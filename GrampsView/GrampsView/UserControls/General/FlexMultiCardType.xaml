<Frame
    x:Class="GrampsView.UserControls.FlexMultiCardType"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="FlexMultiCardTypeRoot"
    HorizontalOptions="Start"
    Style="{StaticResource FlexMultiCollection}">

    <!--  TODO Wrap until fixed in Xamaerin https://github.com/xamarin/Xamarin.Forms/issues/5265  -->
    <StackLayout>
        <FlexLayout
            x:Name="multiflexer"
            BindableLayout.ItemsSource="{Binding DisplayMultiList, Mode=OneWay}"
            HorizontalOptions="Start"
            IsEnabled="{Binding FlexMultiCardVisible, Mode=OneWay}"
            Style="{StaticResource FlexLayoutCards}" />
    </StackLayout>
</Frame>